# Open Terminal
super + {_,shift + }Return
	{alacritty, bspc node -s biggest.local}

# Quit/Restart BSPWM
super + shift r
	bspc wm -r
super + shift s
	pkill -USR1 -x sxhkd
super + shift q
	bspc quit
# Call rofi / Powermenu
super + {d, x, p, b}
    {$HOME/.config/bspwm/rofi/scripts/launcher.sh, $HOME/.config/bspwm/rofi/scripts/powermenu.sh, $HOME/.config/bspwm/rofi/scripts/wallpaper.sh, $HOME/.config/bspwm/rofi/scripts/bluetooth.sh}

# Change Keyboard Layout
#super + space
#    {setxkbmap ru, setxkbmap us}

#bb
# KEYS
#

# Volume Controls
XF86AudioRaiseVolume
    /home/skilax/.config/bspwm/bin/volume/volume.sh --up
XF86AudioLowerVolume
    /home/skilax/.config/bspwm/bin/volume/volume.sh --down
XF86AudioMute
    /home/skilax/.config/bspwm/bin/volume/volume.sh --toggle
# Brightness Controls

XF86MonBrightness{Up,Down}
	/home/skilax/.config/bspwm/bin/brightness.sh {--up, --down}
#XF86MonBrightness{Up,Down}
#  brightnessctl s 10{+,-}%

# screenshot
Print
	flameshot gui
shift + Print
	flameshot full

#
# BSPWM
#

#Kill window
super + c
	bspc node -{c}

# set the window state
super + Up
	bspc node -t fullscreen
super + Down
	bspc node -t tiled

# Switch workspace
#super + {Left,Right}
#	bspc desktop -f {prev,next}.local

# focus or send to the given desktop
#super + {_,alt + }{1-9,0}
#	bspc {desktop -f,node -d} '^{1-9,10}'
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# Change focus to next window, including floating window
alt + {_,shift + }Tab
    bspc node -f {next.local,prev.local}

# Reboot
super + ctrl + r
        reboot

# Power Off
super + ctrl + p
        poweroff





#ПОМЕНЯТЬ СТАТУС ОКНА НА /ТАЙЛОВОЕ/ПСЕВДО ТАЙЛОВОЕ/ПЛАВАЮЩЕЕ/ПОЛНОЭКРАННОЕ
# alternate between the tiled and monocle layout
super + t
	bspc node -t "~"{floating, tiled}
#ВЫБРАТЬ НАПРАВЛЕНИЕ В КОТОРОМ ОТКРОЕТСЯ НОВОЕ ОКНО
super + alt + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

#ОТМЕНИТЬ НАПРАВЛЕНИЕ В КОТОРОМ ОТКРОЕТСЯ НОВОЕ ОКНО
super + alt + space
	bspc node -p cancel

